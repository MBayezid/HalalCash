<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".resetPassword.AccountRecovery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account recovery"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/halal_logo_main" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:hint="Email / Phone"

            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"

            app:boxStrokeColor="@color/gray"


            app:boxStrokeWidth="2dp"
            app:counterTextColor="@color/yellow"
            app:cursorColor="@color/yellow"
            app:endIconMode="clear_text"

            app:helperText="user@gmail.com / 01XXX-XXX-XXX"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@color/gray"
            app:hintTextColor="@color/yellow"

            >

            <com.google.android.material.textfield.TextInputEditText

                android:id="@+id/userId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textAutoComplete"
                android:textColor="@color/yellow"
                android:textColorHint="@color/user_id_pass_field_selector"
                android:textSize="20sp"
                android:textStyle="bold"
                app:textInputLayoutFocusedRectEnabled="true" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/deposit_btn_bg"
            android:gravity="center"
            android:padding="20dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Continue "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>