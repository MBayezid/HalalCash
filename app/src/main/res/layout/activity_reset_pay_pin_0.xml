<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".PayPin.ResetPayPin0">

    <ImageView
        android:id="@+id/btnBack"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_left_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set New Pay PIN"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Enter Your Pay Pin"
        android:textColor="#7A8696"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32">

        <EditText
            android:id="@+id/editPin1"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:textCursorDrawable="@color/yellow"
            android:gravity="center"
            android:inputType="number"

            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPin2"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:textCursorDrawable="@color/yellow"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editPin3"
            app:layout_constraintStart_toEndOf="@+id/editPin1"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/editPin3"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:textCursorDrawable="@color/yellow"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"

            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPin4"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:textCursorDrawable="@color/yellow"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editPin5"
            app:layout_constraintStart_toEndOf="@+id/editPin3"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPin5"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:textCursorDrawable="@color/yellow"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView322"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Enter Your Pay Pin Again"
        android:textColor="#7A8696"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView322">

        <EditText
            android:id="@+id/editPin11"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:textCursorDrawable="@color/yellow"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPin22"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:textCursorDrawable="@color/yellow"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editPin33"
            app:layout_constraintStart_toEndOf="@+id/editPin11"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/editPin33"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:gravity="center"
            android:textCursorDrawable="@color/yellow"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPin44"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:textCursorDrawable="@color/yellow"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editPin55"
            app:layout_constraintStart_toEndOf="@+id/editPin33"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editPin55"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:background="@drawable/bdt_bg"
            android:gravity="center"
            android:textCursorDrawable="@color/yellow"
            android:inputType="number"
            android:text=""
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edit_text"
        android:backgroundTint="@color/yellow"
        android:backgroundTintMode="add"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:text="Confirm"
        android:textColor="@color/black"
        android:textColorHint="#72798C"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout44" />


</androidx.constraintlayout.widget.ConstraintLayout>