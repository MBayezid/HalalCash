<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pay_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="4">
    <!-- Auto layout, variables, and unit scale are not yet supported -->

    <!--        -->

    <LinearLayout
        android:id="@+id/top_nav_menu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnPayProfile"
            android:layout_width="48dp"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/profile_round_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Halal Pay"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/support"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/support" />


    </LinearLayout>
    <!--  -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/nav_menu">

        <RelativeLayout
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/balance_banner_bg"
            android:paddingBottom="32dp">

            <LinearLayout
                android:id="@+id/balance_type_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/total_balan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_flex_regular"
                    android:gravity="center"
                    android:text="@string/totalBalance"
                    android:textAppearance="@style/textStyle"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/total_balan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_flex_regular"
                    android:gravity="center"
                    android:text="(BDT)"
                    android:textAppearance="@style/textStyle"
                    android:textColor="#AAAAAA"

                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/drop_down_arrow" />
            </LinearLayout>

            <!--                <LinearLayout-->
            <!--                    android:id="@+id/linearLayout3"-->
            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="29dp"-->
            <!--                    android:layout_below="@+id/balance_type_linear"-->
            <!--                    android:layout_alignStart="@+id/balance_type_linear"-->
            <!--                    android:layout_marginStart="-3dp"-->
            <!--                    android:layout_marginTop="9dp"-->
            <!--                    android:gravity="center_horizontal"-->
            <!--                    android:orientation="horizontal">-->

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/balance_type_linear"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:padding="5dp"
                app:srcCompat="@drawable/bdt_icon" />

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/balance_type_linear"
                android:layout_toEndOf="@+id/imageView"
                android:background="@color/transparent"
                android:clickable="true"
                android:gravity="left|center"
                android:maxEms="7"
                android:padding="0dp"
                app:boxStrokeWidth="0dp"
                app:endIconCheckable="true"
                app:endIconMode="password_toggle"
                app:endIconScaleType="center"
                app:endIconTint="@color/gray_txt"
                app:hintTextColor="@color/yellow"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/deposit_btn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.562">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="none"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:padding="0dp"
                    android:text="000.00"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView5"
                app:srcCompat="@drawable/content_coppy_icon" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/imageView"
                android:layout_marginStart="0dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto_thin"
                android:gravity="center"
                android:text="Pay ID: "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/textView4"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/textView4"
                android:fontFamily="@font/roboto_thin"
                android:gravity="center"
                android:text="12345678"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/deposit_btn"
                android:layout_width="75dp"
                android:layout_height="28dp"
                android:layout_alignTop="@+id/balance_type_linear"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/deposit_btn_bg"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Deposit"
                    android:textColor="#21252E"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_transa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:weightSum="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:id="@+id/pay_send"
            android:layout_width="56dp"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:srcCompat="@drawable/pay_send_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_flex_regular"
                android:gravity="center"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p2p_receive"
            android:layout_width="56dp"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:srcCompat="@drawable/pay_receive_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_flex_regular"
                android:gravity="center"
                android:text="@string/receive"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_scanToPay"
            android:layout_width="56dp"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:srcCompat="@drawable/pay_scan_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_flex_regular"
                android:gravity="center"
                android:text="@string/scanTOPay"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@color/gray"
        android:orientation="vertical"
        android:padding="20dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/pay_sendCash"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:src="@drawable/pay_send_cash_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_flex_regular"
                    android:gravity="center"
                    android:text="@string/sendCash"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_gift"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:src="@drawable/pay_gift_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_flex_regular"
                    android:gravity="center"
                    android:text="@string/gift"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_mobileTopUp"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    app:srcCompat="@drawable/pay_mobile_top_up_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_flex_regular"
                    android:gravity="center"
                    android:text="@string/mobileTopUp"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_requestPayment"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:src="@drawable/pay_request_payment_icon" />

                <TextView
                    android:id="@+id/pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_flex_regular"

                    android:gravity="center"
                    android:text="@string/requestPayment"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
